{
  "compilerOptions": {
    "lib": [
      "es5",
      "es2015",
      "es2015.promise",
      "dom",
      "scripthost"
    ],
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "es5",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["arcgis-js-api"],
    "importHelpers": true,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules",
    "./tsrules"
  ],
  "files": [
    "./app/interfaces/updates.d.ts",
    "../node_modules/templates-common-library/index.d.ts",
    "../node_modules/@esri/configurable-app-components/index.d.ts"
  ]
}
